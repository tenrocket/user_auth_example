%table
	%thead
		%th Name
		%th Description 
		%th # of Items
	%tbody
		- @wishlists.each do |wishlist|
			%tr
				%td= link_to wishlist.name, wishlist
				%td= wishlist.description
				%td= wishlist.items.count

%br
%br
= form_for Wishlist.new do |f|
	= f.label :name
	= f.text_field :name
	= f.label :description
	= f.text_field :description
	= f.submit